@model Business.Entities.Materia

@{
    ViewData["Title"] = "MateriaEdit";
}

<h1>Modificar Materia</h1>

<h4>Materia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MateriaEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.ID)
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HSSemanales" class="control-label"></label>
                <input asp-for="HSSemanales" class="form-control" />
                <span asp-validation-for="HSSemanales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HSTotales" class="control-label"></label>
                <input asp-for="HSTotales" class="form-control" />
                <span asp-validation-for="HSTotales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDPlan" class="control-label"></label>
                <input asp-for="IDPlan" class="form-control" />
                <span asp-validation-for="IDPlan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MateriaIndex">Volver atrás</a>
</div>

