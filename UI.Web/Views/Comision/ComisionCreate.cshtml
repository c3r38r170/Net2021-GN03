@model Business.Entities.Comision
@using Data.Database;
@{
    ViewData["Title"] = "ComisionCreate";
}

<h1>Alta de Comisión</h1>

<h4>Comisión</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ComisionCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>        
            <div class="form-group">
                <label asp-for="AñoEspecialidad" class="control-label">Año:</label>
                <input asp-for="AñoEspecialidad" class="form-control" min="1959" required/>
                <span asp-validation-for="AñoEspecialidad" class="text-danger">@if(Model.State == Business.Entities.BusinessEntity.States.Unmodified && Model.AñoEspecialidad < 1959)@Html.Raw("El año no puede ser menor a 1959.")</span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción:</label>
                <input asp-for="Descripcion" class="form-control" required/>
                <span asp-validation-for="Descripcion" class="text-danger">@if(Model.State == Business.Entities.BusinessEntity.States.Unmodified && (Model.Descripcion==null || Model.Descripcion.Trim()==""))@Html.Raw("La descripción no debe estar vacía.")</span>
            </div>
            <div class="form-group">
                <label asp-for="IDPlan" class="control-label">Plan:</label>
                <select asp-for="IDPlan" class="form-control" asp-items="(new PlanAdapter()).GetAll().Select(p => new SelectListItem(p.Descripcion.ToString(), p.ID.ToString()))" required>
                    <option></option>
                </select>
                <span asp-validation-for="Descripcion" class="text-danger">@if(Model.State == Business.Entities.BusinessEntity.States.Unmodified && Model.IDPlan<1)@Html.Raw("Debe elegir un plan.")</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ComisionIndex">Volver atrás</a>
</div>

