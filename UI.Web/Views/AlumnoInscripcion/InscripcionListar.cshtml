@model IEnumerable<Business.Entities.AlumnoInscripcion>
@using Business.Logic
@{
    ViewData["Title"] = "InscripcionListar";
}

<h1>Alumnos Inscriptos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Alumno
            </th>
            <th>
                Condicion
            </th>
            <th>
                Nota
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model) {
            <tr>
                <td>
                    @Html.Raw((new PersonaLogic()).GetOne(item.IDAlumno).NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condicion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nota)
                </td>
                <td>
                    @Html.ActionLink("Editar", "InscripcionEdit", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>